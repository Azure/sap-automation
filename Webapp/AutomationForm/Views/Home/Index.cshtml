@{
    ViewData["Title"] = "Home";
}

<div class="wrapper">

    <div class="text-center" style="padding: 20px">
        <h1>Deploy SAP on Azure</h1>
    </div>

    <div class="wrapper">
        <h2 class="ms-fontSize-20 grouping"> Getting started </h2>
        <p>
            Click on the <b>Landscape</b> or <b>System</b> tab to begin creation.
        </p>
        <h2 class="ms-fontSize-20 grouping">Creating</h2>
        <p>
            Click the <b>Create New</b> button and fill out the parameters to your desire.
        </p>
        <h2 class="ms-fontSize-20 grouping">Editing</h2>
        <p>
            In the <b>Edit</b> page you can update existing landscapes and systems, or choose to save as a new item.
        </p>
        <h2 class="ms-fontSize-20 grouping">Deploying</h2>
        <p>
            Clicking <b>Deploy</b> will kick off a pipeline to officially create the workload zone or system specified.
        </p>
        <h2 class="ms-fontSize-20 grouping">Details</h2>
        <p>
            Click on <b>Details</b> to see more information about your workload zone or system.    
        </p>
    </div>

</div>
