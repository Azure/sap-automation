@model AutomationForm.Models.LandscapeViewModel

@{
    ViewBag.Title = "Landscape details";
}

<fluent-breadcrumb>
    <fluent-breadcrumb-item href="@Url.Action("Index", "Home")">Home</fluent-breadcrumb-item>
    <fluent-breadcrumb-item href="@Url.Action("Index", "Landscape")">Landscapes</fluent-breadcrumb-item>
    <fluent-breadcrumb-item href="#">Details</fluent-breadcrumb-item>
</fluent-breadcrumb>

<div class="text-center">
    <h2>@Model.Landscape.Id</h2>
</div>

<table class="details-table">
    <caption>@Model.Landscape.Id parameter details</caption>
    <thead>
        <tr>
            <th>Parameter</th>
            <th>Value</th>
            <th>Section</th>
        </tr>
    </thead>
    <tbody>
        @{ bool everyOther = true; }
        @foreach (ParameterGroupingModel pg in Model.ParameterGroupings)
        {
            @foreach (Grouping g in pg.Groupings)
            {
                bool firstRow = true;
                @foreach (ParameterModel p in g.Parameters)
                {
                    var value = Model.Landscape.GetType().GetProperty(p.Name).GetValue(Model.Landscape);
                    <tr>                    
                        <td>@p.Name</td>

                        @if (value == null)
                        {
                            <td> </td>
                        }
                        else
                        {
                            @if (value.GetType() == typeof(Image))
                            {
                                Image img = (Image)value;
                                if (img.os_type         != null ||
                                    img.source_image_id != null ||
                                    img.publisher       != null ||
                                    img.offer           != null ||
                                    img.sku             != null ||
                                    img.version         != null)
                                {
                                    <td>
                                        os_type:         @img.os_type <br>
                                        source_image_id: @img.source_image_id <br>
                                        publisher:       @img.publisher <br>
                                        offer:           @img.offer <br>
                                        sku:             @img.sku <br>
                                        version:         @img.version
                                    </td>
                                }
                                else {
                                    <td> </td>
                                }
                            }
                            else
                            {
                                <td>
                                    @if (p.Type == "list")
                                    {
                                        var tmp = (string[])value;
                                        foreach (var t in tmp)
                                        {
                                            @t <br>
                                        }
                                    }
                                    else
                                    {
                                        @value.ToString()
                                    }
                                </td>
                            }
                        }
                        @if (firstRow)
                        {
                            <td rowspan="@g.Parameters.Length" class="details-section" style="@(everyOther ? "background: #eee" : "background: none")">
                                @g.Section
                            </td>
                            firstRow = false;
                            everyOther = !everyOther;
                        }
                    </tr>
                }
            }
        }
    </tbody>
</table>

<p>
    <fluent-anchor appearance="accent" href="@Url.Action("Edit", "Landscape", new { id = Model.Landscape.Id })">
        <i class="ms-Icon ms-Icon--Edit" aria-hidden="true"></i> Edit
    </fluent-anchor>
    <fluent-anchor href="@Url.Action("Index", "Landscape")">
        Back to list
    </fluent-anchor>
</p>