@model AutomationForm.Models.LandscapeViewModel;
@using AutomationForm.Models
@{
    ViewData["Title"] = "Automation Form";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        var retainedValues = {
            subscription: '@Model.Landscape.subscription',
            environment: '@Model.Landscape.environment',
            location: '@Model.Landscape.location',
            rg: '@Model.Landscape.resource_group_arm_id',
            network: '@Model.Landscape.network_address_arm_id',
            adminsubnetarmid: '@Model.Landscape.admin_subnet_arm_id',
            dbsubnetarmid: '@Model.Landscape.db_subnet_arm_id',
            appsubnetarmid: '@Model.Landscape.app_subnet_arm_id',
            websubnetarmid: '@Model.Landscape.web_subnet_arm_id',
            iscsisubnetarmid: '@Model.Landscape.iscsi_subnet_arm_id',
            anfsubnetarmid: '@Model.Landscape.anf_subnet_arm_id',
            adminsubnetnsgarmid: '@Model.Landscape.admin_subnet_nsg_arm_id',
            dbsubnetnsgarmid: '@Model.Landscape.db_subnet_nsg_arm_id',
            appsubnetnsgarmid: '@Model.Landscape.app_subnet_nsg_arm_id',
            websubnetnsgarmid: '@Model.Landscape.web_subnet_nsg_arm_id',
            iscsisubnetnsgarmid: '@Model.Landscape.iscsi_subnet_nsg_arm_id',
            anfsubnetnsgarmid: '@Model.Landscape.anf_subnet_nsg_arm_id'
        }
        setModelData(retainedValues);
        initializeDropdowns();
    });

    window.onload = function () {
        $('[data-toggle="tooltip"]').tooltip();
        $(".js-example-placeholder-single").select2({
            placeholder: "Search...",
            allowClear: true,
            tags: true
        });
        var PivotElements = document.querySelectorAll(".ms-Pivot");
        for (var i = 0; i < PivotElements.length; i++) {
          new fabric['Pivot'](PivotElements[i]);
        }
        $("#Basic-pivot").addClass("is-selected");
    }

</script>

<div>
    <h2 style="text-align: center">Workload Zone Parameters </h2>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="notificationContainer" style="display: flex; background: rgb(253, 231, 233);">
            <div class="notificationInner">
                <span class="notificationText">
                    @Html.ValidationSummary(false)
                </span>
            </div>
        </div>
    }


    <form class="wrapper" asp-controller="landscape" asp-action="create">
        @Html.AntiForgeryToken()

        <div class="ms-Pivot ms-Pivot--large">

            <ul class="ms-Pivot-links" style="text-align: center">
                @foreach (ParameterGroupingModel pg in Model.ParameterGroupings)
                {
                    <li class="ms-Pivot-link" id="@pg.Tab-pivot" data-content="@pg.Tab" title="@pg.Tab" tabindex="1">
                        @pg.Tab
                    </li>
                }
            </ul>

            @foreach (ParameterGroupingModel pg in Model.ParameterGroupings)
            {
                <div class="ms-Pivot-content" data-content="@pg.Tab">
                    <fieldset id="@pg.Tab">

                        @foreach (Grouping g in pg.Groupings)
                        {
                            <h2 class="ms-fontSize-20 grouping"> @g.Section</h2>
                            <div class="parameters">

                                @foreach (ParameterModel p in g.Parameters)
                                {
                                    var required = (@p.Required) ? "required" : "";

                                    <div class="ms-TextField">
                                        @Html.Label(p.Name, p.Name, new { @class = $"ms-Label {required}" })
                                        <i class="ms-Icon ms-Icon--Info" aria-hidden="true" data-toggle="tooltip" title="@p.Description"></i>

                                        @if (@p.Type == "field")
                                        {
                                            @Html.TextBox(p.Name, "", new { @class = "ms-TextField-field", @onchange = $"overrulesHandler({p.Name}, {p.Overrules})" })
                                        }
                                        else if (@p.Type == "lookup")
                                        {
                                            @Html.DropDownList(p.Name, p.Options, new { @class = "js-example-placeholder-single", @style = "width: 100%;", @onchange = $"overrulesHandler({p.Name}, {p.Overrules})" })
                                        }
                                        else
                                        {
                                            <p>Invalid parameter</p>
                                        }

                                        @Html.ValidationMessage(p.Name)
                                    </div>
                                }
                            </div>
                        }
                    </fieldset>
                </div>
            }
        </div>

        <fluent-button appearance="accent" style="margin-top: 15px" type="submit">
            Submit
        </fluent-button>

        <fluent-anchor href="@Url.Action("Index", "Landscape")">
            Cancel
        </fluent-anchor>
    </form>
</div>