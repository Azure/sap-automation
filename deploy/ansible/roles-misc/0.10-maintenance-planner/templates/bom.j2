{{'      %-12s' | format('path:' | trim) }}{{'  %s' | format('download_basket') }}
{%     else %}
{{'      %-12s' | format('path:' | trim) }}{{'  %s' | format('download_basket') }}
{%     endif %}

{% endfor %}
